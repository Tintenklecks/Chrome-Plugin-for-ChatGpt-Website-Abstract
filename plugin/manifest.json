{
    "manifest_version": 3,
    "name": "Website Summary",
    "version": "1.0",
    "description": "Generate a 5 bullet point summary of the current website using OpenAI's Davinci model.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "48": "icon.png"
    }
}